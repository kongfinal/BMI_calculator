<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
>
    <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent" android:background="#AA7527" android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="350dp"
                    android:layout_height="440dp" android:background="#DFA042"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
                    android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="33dp" android:layout_marginRight="33dp" android:layout_marginTop="87dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="217dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/linearLayout">
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <ImageView
                            android:layout_width="250dp"
                            android:layout_height="150dp" app:srcCompat="@drawable/bmi_calculator"
                            android:id="@+id/Title_BMI_CALCULATOR_imageView"
                            android:background="#975D0B" app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="68dp" android:layout_marginRight="68dp"
                            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="69dp"
                            android:layout_marginStart="69dp" android:layout_marginTop="33dp"
                            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="40dp"
                            app:layout_constraintBottom_toTopOf="@+id/Title_name_image"/>
                    <ImageView
                            android:layout_width="250dp"
                            android:layout_height="50dp" app:srcCompat="@drawable/bmi_calculator_name"
                            android:id="@+id/Title_name_image" android:background="#07FFC107"
                            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="90dp"
                            android:layout_marginRight="90dp" app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginLeft="91dp" android:layout_marginStart="91dp"
                            android:layout_marginTop="45dp"
                            app:layout_constraintTop_toBottomOf="@+id/Title_BMI_CALCULATOR_imageView"
                            app:layout_constraintBottom_toTopOf="@+id/edit_name"/>
                    <EditText
                            android:layout_width="250dp"
                            android:layout_height="60dp"
                            android:inputType="textPersonName"
                            android:ems="10"
                            android:id="@+id/edit_name" android:hint="@string/app_name" android:background="#C27F1D"
                            app:layout_constraintTop_toBottomOf="@+id/Title_name_image"
                            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="68dp"
                            android:layout_marginRight="68dp" app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginLeft="66dp" android:layout_marginStart="66dp"
                            android:layout_marginBottom="75dp" app:layout_constraintBottom_toBottomOf="parent"
                            android:gravity="center" android:textSize="24sp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
            <ImageButton
                    android:layout_width="180dp"
                    android:layout_height="80dp" app:srcCompat="@drawable/bmi_calculator_play"
                    android:id="@+id/playButton" android:scaleType="fitCenter" android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="117dp" android:layout_marginStart="117dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="117dp" android:layout_marginRight="117dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</layout>
